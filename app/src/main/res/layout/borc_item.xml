<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FDF6EC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/borc_item_bg">


        <TextView
            android:id="@+id/tvAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çay ve Simit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:fontFamily="sans-serif-medium" />

        <!-- Alınan kişi bilgisi -->
        <TextView
            android:id="@+id/tvKimdenAlindi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alınan: Ahmet Yılmaz"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:layout_below="@id/tvAciklama"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/text_view_tiklama_efekt"
            android:paddingVertical="2dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Miktar -->
        <TextView
            android:id="@+id/tvMiktar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺12.50"
            android:textSize="18sp"
            android:textColor="#D84315"
            android:fontFamily="sans-serif"
            android:layout_below="@id/tvKimdenAlindi"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvOdenecekTarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ödeme: 01.08.2025"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:textStyle="normal"
            android:layout_below="@id/tvMiktar"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/tvIban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBAN: TR12 3456 7890 1234 5678 9012 34"
            android:textSize="12sp"
            android:textColor="#795548"
            android:layout_below="@id/tvOdenecekTarih"
            android:layout_marginTop="6dp"
            android:textStyle="normal" />

        <!-- Zaman alanı -->
        <TextView
            android:id="@+id/tvZaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eklenme: 25 Temmuz"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_below="@id/tvIban"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-condensed" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/saat"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvAciklama"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/hatirlatici"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignTop="@id/tvAciklama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:text="Hatırlatıcı eklendi"
            android:textColor="#2196F3"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnBorcuOde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borcu Öde"
            android:layout_below="@id/tvIban"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#F05A22"
            android:textColor="#FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="visible"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/odenditext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIban"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:visibility="gone"
            android:paddingRight="16dp"
            android:text="Ödediniz"
            android:textColor="#0B670F"
            android:textStyle="italic" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
