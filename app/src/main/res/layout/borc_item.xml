<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FDF6EC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/borc_item_bg">

        <!-- Açıklama -->
        <TextView
            android:id="@+id/tvAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çay ve Simit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:fontFamily="serif" />

        <!-- Miktar -->
        <TextView
            android:id="@+id/tvMiktar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺12.50"
            android:textSize="18sp"
            android:textColor="#D84315"
            android:fontFamily="casual"
            android:layout_below="@id/tvAciklama"
            android:layout_marginTop="4dp" />

        <!-- Ödeme tarihi -->
        <TextView
            android:id="@+id/tvOdenecekTarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ödeme: 01.08.2025"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:layout_below="@id/tvMiktar"
            android:layout_marginTop="6dp"
            android:fontFamily="cursive" />

        <!-- Zaman -->
        <TextView
            android:id="@+id/tvZaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eklenme: 25 Temmuz"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_below="@id/tvOdenecekTarih"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-condensed" />

        <!-- Saat ikonu -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/saat"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
