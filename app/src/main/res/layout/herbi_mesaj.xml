<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Giden Mesaj (sağda) -->
    <LinearLayout
        android:id="@+id/mesajGidenLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gelen_mesaj"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/txtBorcMiktariGiden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miktar: 250 TL"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtOdenecekTarihGiden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ödeme Tarihi: 25.07.2025"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtAciklamaGiden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açıklama: Akşam yemeği parası"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/mesajGidenSaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:14"
                android:textSize="12sp"
                android:layout_marginStart="200dp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/gorulduDurumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Görüldü"
            android:translationX="-10dp"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Gelen Mesaj (solda) -->
    <LinearLayout
        android:id="@+id/mesajGelenLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginEnd="50dp"
        android:gravity="start">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/giden_mesaj"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/txtBorcMiktariGelen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miktar: 250 TL"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtOdenecekTarihGelen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ödeme Tarihi: 25.07.2025"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtAciklamaGelen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açıklama: Akşam yemeği parası"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/mesajGelenSaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:15"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
