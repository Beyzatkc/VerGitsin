<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:backgroundTint="#E8F5E9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/borc_item_bg">

        <!-- Açıklama -->
        <TextView
            android:id="@+id/tvAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Parası"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvKimeVerildi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verilen: "
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_below="@id/tvAciklama"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/text_view_tiklama_efekt"
            android:paddingVertical="2dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Miktar -->
        <TextView
            android:id="@+id/tvMiktar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺30.00"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:fontFamily="sans-serif"
            android:layout_below="@id/tvKimeVerildi"
            android:layout_marginTop="4dp" />

        <!-- Ödeme beklenen tarih -->
        <TextView
            android:id="@+id/tvOdemeTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geri Ödeme: 10.08.2025"
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:layout_below="@id/tvMiktar"
            android:layout_marginTop="6dp"
            android:fontFamily="cursive" />

        <!-- Eklenme tarihi -->
        <TextView
            android:id="@+id/tvZaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eklenme: 05 Ağustos"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_below="@id/tvOdemeTarihi"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-condensed" />

        <!-- IBAN alanı -->
        <TextView
            android:id="@+id/tvIban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBAN: TR98 7654 3210 9876 5432 1098 76"
            android:textSize="12sp"
            android:textColor="#4E342E"
            android:layout_below="@id/tvZaman"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace" />

        <!-- Saat ikonu -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/saat"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvAciklama"
            android:layout_marginTop="4dp" />

        <!-- Hatırlat butonu -->
        <Button
            android:id="@+id/btnHatirlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatırlat"
            android:layout_below="@id/tvIban"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#43A047"
            android:textColor="#FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
