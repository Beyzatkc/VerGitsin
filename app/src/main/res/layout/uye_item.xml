<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginEnd="12dp">

    <!-- Profil ve TaÃ§ birlikte burada -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/imageUyeProfil"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <ImageView
            android:id="@+id/imageTaci"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="-1dp"
            android:src="@drawable/tac"
            android:visibility="gone"
            app:tint="@color/light_blue_600" />
    </FrameLayout>

    <TextView
        android:id="@+id/textUyeAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ali"
        android:textSize="12sp"
        android:textColor="#5D4037"
        android:background="@drawable/bg_textview_chip"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end" />
</LinearLayout>
