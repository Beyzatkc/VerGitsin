<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ProfilcikartLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/ProfilcikartCard"
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cardCornerRadius="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/daire_cerceve"
                app:cardBackgroundColor="@color/neutral_grey"
                app:cardElevation="0dp">
            <ImageView
                android:id="@+id/Profilcikart"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/KullaniciAdicikart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ali"
                android:textSize="14sp"
                android:textColor="@color/neutral_grey"
                android:background="@drawable/bg_textview_chip"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
