<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"

    android:background="@drawable/onizleme_bg">

    <!-- Başlık -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grubu Düzenle"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#3E2723"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Grup Profil Fotoğrafı -->
    <FrameLayout
        android:id="@+id/profileContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            android:background="@drawable/profil_bg"
            android:contentDescription="Profil Fotoğrafı"
            android:clipToOutline="true" />

        <!-- Kamera ikonu üstüne bindirilmiş -->
        <ImageView
            android:id="@+id/changePhotoIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:padding="6dp"
            android:background="@drawable/borc_rozet_bg"
            android:src="@drawable/pencil"
            android:contentDescription="Fotoğraf Değiştir"
            app:tint="@color/text_primary1" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fotoğrafı Değiştir"
        android:textColor="@color/accent_blue1"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Grup Açıklaması -->
    <EditText
        android:id="@+id/editGrupAciklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grup hakkında bilgi giriniz"
        android:minHeight="100dp"
        android:gravity="top|start"
        android:background="@drawable/bg_textview_chip"
        android:padding="12dp"
        android:textColor="#3E2723"
        android:textSize="14sp"
        android:layout_marginBottom="20dp" />

    <!-- Kaydet Butonu -->
    <Button
        android:id="@+id/buttonGrupKaydet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:textColor="@color/text_primary1"
        android:backgroundTint="@color/accent_blue1"
        android:padding="12dp" />
</LinearLayout>
