<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/morarkaplan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Alarm.AlarmActivity">

    <TextView
        android:id="@+id/vergtsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:text="VerGitsin"
        android:textColor="#605DBD"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:translationY="50dp"
        android:background="@drawable/saat"
        />

    <TextView
        android:id="@+id/tvBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationY="50dp"
        android:paddingBottom="10dp"
        android:text="Hatırlatıcı"
        android:textColor="#E6392D"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/borc_miktr"
        android:text="Alinan borç: 346 TL"
        android:textSize="24sp"
        android:textColor="#000000"
        android:translationY="50dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvAlarmMesaj"
        android:text="Borcunu ödeme zamanı geldi!"
        android:textSize="24sp"
        android:textColor="#000000"
        android:translationY="50dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAlarmKapat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#F05A22"
        android:text="Alarmı Kapat"
        android:textColor="#FEFEFE"
        android:translationY="50dp" />

</LinearLayout>
