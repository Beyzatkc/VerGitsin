<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/herbi_kullanici_back">

    <!-- Grup İkonu (Daire) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGrupIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageGrupIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />
    </androidx.cardview.widget.CardView>

    <!-- Grup Adı -->
    <TextView
        android:id="@+id/textGrupAdi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Çaycılar Grubu"
        android:textSize="16sp"
        android:textColor="#4E342E"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/cardGrupIcon"
        app:layout_constraintTop_toTopOf="@id/cardGrupIcon"
        app:layout_constraintEnd_toStartOf="@id/imageMore" />

    <!-- Üye Sayısı -->
    <TextView
        android:id="@+id/textUyeSayisi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Üyeler: 5"
        android:textSize="13sp"
        android:textColor="#6D4C41"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/textGrupAdi"
        app:layout_constraintTop_toBottomOf="@id/textGrupAdi"
        app:layout_constraintEnd_toStartOf="@id/imageMore" />

    <!-- Oluşturulma Tarihi -->
    <TextView
        android:id="@+id/textTarih"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oluşturuldu: 25 Temmuz"
        android:textSize="12sp"
        android:textColor="#8D6E63"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/textGrupAdi"
        app:layout_constraintTop_toBottomOf="@id/textUyeSayisi"
        app:layout_constraintEnd_toStartOf="@id/imageMore" />

    <!-- Sağdaki Buton (Detay butonu gibi) -->
    <ImageView
        android:id="@+id/imageMore"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/daha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
