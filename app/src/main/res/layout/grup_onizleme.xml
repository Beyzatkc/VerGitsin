<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grupOnizlemeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onizleme_bg"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/onizleme_bg"
            android:backgroundTint="@color/surface_dark"
            android:layout_marginBottom="16dp"/>

        <!-- Grup Adı -->
        <TextView
            android:id="@+id/textGrupAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Çaycılar Grubu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:gravity="center"
            android:background="@drawable/bg_textview_box"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Grup Profil Fotoğrafı -->
        <ImageView
            android:id="@+id/imageGrupProfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp" />

        <!-- Üyeler -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Üyeler"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:background="@drawable/bg_textview_box"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Yatay Üye Listesi -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerUyeler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </HorizontalScrollView>
        <!-- Grup Açıklama -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grup Hakkında"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:background="@drawable/bg_textview_box"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textGrupAciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bu grup sadece çay molasında derin sohbet edenlerin toplandığı bir yerdir."
            android:textSize="14sp"
            android:textColor="#3E2723"
            android:background="@drawable/bg_textview_chip"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Oluşturulma Tarihi -->
        <TextView
            android:id="@+id/textGrupTarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oluşturulma Tarihi: 25 Temmuz 2025"
            android:textSize="13sp"
            android:textColor="#5D4037"
            android:background="@drawable/bg_textview_chip"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
